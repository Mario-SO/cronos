{
	"name": "cronos",
	"version": "0.0.1",
	"description": "A terminal calendar app built with OpenTUI.",
	"module": "src/app/index.tsx",
	"type": "module",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/Mario-SO/cronos.git"
	},
	"keywords": [
		"calendar",
		"tui",
		"terminal",
		"productivity",
		"cli",
		"bun"
	],
	"engines": {
		"bun": ">=1.3.0"
	},
	"bin": {
		"cronos": "bin/cronos"
	},
	"files": [
		"bin",
		"dist",
		"README.md"
	],
	"scripts": {
		"build:cli": "bun build src/cli/index.ts --outdir dist --entry-naming \"cli.[ext]\" --target bun --format esm",
		"prepublishOnly": "bun run build:cli",
		"dev": "bun run --watch src/app/index.tsx",
		"db:populate": "bun run src/scripts/populateDb.ts",
		"hooks:install": "git config core.hooksPath .githooks",
		"check": "bunx biome lint . && bunx biome format --write . && bunx tsc --noEmit",
		"test": "bun test"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.11",
		"@types/bun": "latest",
		"@types/react": "^19.2.7"
	},
	"peerDependencies": {
		"typescript": "^5.9.2"
	},
	"dependencies": {
		"@opentui/core": "^0.1.69",
		"@opentui/react": "^0.1.69",
		"effect": "^3.19.14",
		"react": "^19.2.3"
	}
}
